{
  "manifest_version": 2,
  "name": "Udemy Speedup",
  "version": "1.1.2",
  "description": "Change video playback speed in Udemy",
  "icons": {
    "64": "icons/logo-64.png"
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "64": "icons/logo-64.png"
    }
  },
  "background": {
    "scripts": ["constants.js", "background/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://www.udemy.com/course/*/learn/*"],
      "js": [
        "constants.js",
        "content_scripts/1_shared.js",
        "content_scripts/2_content.js",
        "content_scripts/3_update.js",
        "content_scripts/4_shortcuts.js"
      ],
      "run_at": "document_end"
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "management",
    "https://www.udemy.com/course/*/learn/*"
  ]
}
